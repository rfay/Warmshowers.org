 *
 * @return array
 */
function warmshowers_site_block_view($delta) {
  $block = array();

  switch ($delta) {
    case 'ws_user_account_menu':
      $block['subject'] = '';
      
      $block['content'] = _warmshowers_site_generate_ws_user_account_menu();
      break;
  }
  return $block;
}

/**
 * Helper function to generate the content for the user account menu block.
 *
 * @return string
 */
function _warmshowers_site_generate_ws_user_account_menu() {
  global $user;
  $content = '';
  
  if (!empty($user->uid)) {
    $content = t("Logged in as !name | !logout", array(
      '!name' => l($user->data['fullname'], 'user/' . $user->uid),
      '!logout' => l(t('Log out'), 'user/logout')
    ));
  }
  else {
    $content = l(t('Sign up'), 'user/register', array(
      'attributes' => array(
        'class' => array('signup')
      )
    ));
    $content .= l(t('Log in'), 'user', array(
      'attributes' => array(
        'class' => array('login')
      )
    ));
  }
  
  $render = theme('html_tag', array(
    'element' => array(
      '#tag' => 'div',
      '#attributes' => array(
        'class' => 'account-menu',
        ),
      '#value' => $content,
    ),
  ));
  
  return !empty($content) ? $render : '';
}


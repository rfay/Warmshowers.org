<?php

include_once('mark_as_favourite.features.inc');

function mark_as_favourite_preprocess(&$variables, $key) {
  list($arg1, $uid) = arg();
  if ($arg1 != 'user' || !is_numeric($uid)) { return; }
  $account = user_load($uid);

  if($key=='wsuser_member_actions'){
    $variables['wsuser_member_actions_block_links'][] = array(
      'type' => 'flag_checkbox',
      'data' => array('flag_name'=>'mark_as_favourite',
      'user_id' => $account->uid,
      ));
  }
}
